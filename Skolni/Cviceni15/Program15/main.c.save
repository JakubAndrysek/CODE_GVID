void naVelkaPismena(char text[])
{
  int velikost = strlen(text);
  for(int i = 0; i < velikost; i++)
  {
    if(text[i]>='a' && text[i] <= 'z')
    {
      text[i] = text[i] - ('a'-'A');
    }
  }
}

